{
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["es2017"],
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    /* Skip type checking all .d.ts files. */
  },
  "include": ["./**/*"],
  "exclude": ["node_modules", "./**/*.spec.ts"]
}
